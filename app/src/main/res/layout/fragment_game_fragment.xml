<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/game_screen_question_image"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/game_screen_letter_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/game_screen_question_image_ball1"

        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/game_screen_letter_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/letter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_letter_a"
            android:textAlignment="center"
            android:textColor="@color/gameRed"
            android:textSize="100sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/letter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_letter_b"
            android:textAlignment="center"
            android:textColor="@color/gameGreen"
            android:textSize="100sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/letter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_letter_c"
            android:textAlignment="center"
            android:textColor="@color/gamePink"
            android:textSize="100sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/letter4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_letter_d"
            android:textAlignment="center"
            android:textColor="@color/gameBlueAqua"
            android:textSize="100sp"
            android:textStyle="bold"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>